generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  OWNER
  RESIDENT
}


model User {
  id                   String          @id @default(cuid())
  name                 String
  email                String          @unique
  password             String
  profilePicture       String?
  type                 UserType        @default(RESIDENT)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
}